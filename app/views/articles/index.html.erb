<div class="container w-full md:max-w-4xl mx-auto">
  <h1 class="text-4xl font-bold flex items-center justify-center space-x-2">
    <span>Articles</span>
    <span class="text-xs text-white px-2 py-1 bg-indigo-500 rounded-md"><%= Article.public_count %>+</>
  </h1>
  <div class="flex my-4">
    <%= link_to "New Article", new_article_path, class:'ml-auto  py-2 px-3 rounded-md shadow-sm bg-transparent text-indigo-500 border border-indigo-500 hover:bg-indigo-500 hover:text-white hover:border-0 focus:border-0 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
  </div>
  <div class="grid grid-cols-3 gap-5">
    <% @articles.each do |article| %>
      <% unless article.archived? %>
        <%= link_to article, :action => 'go' do %>
          <div class="bg-white shadow-md p-4 rounded-lg">
            <img src="https://picsum.photos/seed/<%= article.title %>/300/200" alt="Random image" class="rounded-lg mb-4" width="100%" />
            <h3 class="text-xl font-bold truncate"><%= article.title %></h3>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>

</div>
