<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  <div class="mb-2">
    <%= form.label(:commenter, "Name", class:'block text-sm font-medium text-gray-700') %>
    <div class="mt-1">
      <%= form.text_field(:commenter, class:'shadow-sm focus:ring-indigo-500 focus:border-indigo-500 mt-1 block w-full sm:text-sm border border-gray-300 rounded-md') %>
    </div>
  </div>
  <div class="mb-2">
    <%= form.label(:body, "Comment", class:'block text-sm font-medium text-gray-700') %>
    <div class="mt-1">
      <%= form.text_area(:body, class:'shadow-sm focus:ring-indigo-500 focus:border-indigo-500 mt-1 block w-full sm:text-sm border border-gray-300 rounded-md') %>
    </div>
  </div>
  <div class="mb-2">
    <%= form.label(:status, "Visibility", class:'block text-sm font-medium text-gray-700') %>
    <%= form.select(:status, ['public', 'private', 'archived'], {}, {selected: 'public', class:'mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}) %>
  </div>
  <div class="mb-2">
    <%= form.submit('Add Comment', class:'bg-indigo-500 py-2 px-3 rounded-md shadow-sm sm:text-sm text-white hover:bg-indigo-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500') %>
  </div>
<% end %>