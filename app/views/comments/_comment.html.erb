<% unless comment.archived? %>
<div class="bg-white mb-3 shadow-md p-2 rounded-md">
    <p class="font-bold text-base text-gray-700 mb-none">
        <%= comment.commenter %>
    </p>
    <p class="text-xl text-gray-800">
        <%= comment.body %>
        
    </p>
    <%= link_to 'Delete', [comment.article, comment],
              method: :delete,
              data: { confirm: "Are you sure?" },
              class: 'text-red-500 hover:text-red-600 text-xs' %>
</div>
<% end %>